{
  "author": "rootTheLure",
  "name": "js-testing-workshop",
  "version": "1.0.0",
  "repository": "https://github.com/rootTheLure/js-testing-workshop",
  "license": "MIT",
  "description": "tools and tasks for workshop",
  "scripts": {
    "test:unit:dbg": "mocha --inspect-brk ./specs/*.spec.js -r ./tools/setup.js",
    "test:unit": "node ./node_modules/mocha/bin/mocha -r ./tools/setup.js  -- \"./specs/*.spec.js\"",
    "tests": "mocha ./specs/*.spec.js -r ./tools/setup.js",
    "tests:coverage": "nyc mocha ./specs/*.spec.js -r ./tools/setup.js"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0"
  }
}
